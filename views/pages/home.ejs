<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Shoe Store</title>
   <script src="/public/js/script.js"></script>
<script src="/public/js/map.js"></script>
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=account_circle" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
<script rel="/js/script.js"></script>
<script rel="/js/transik.js"></script>
<script type="text/javascript" src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>


</head>
<body>
    <header>
        <nav class="navbar">
            <a href="/">Home</a>
            <% if (user) { %>
                <% if (user.isAdmin) { %>
                    <!-- Admin-specific link -->
                    <a href="/admin/dashboard">Admin Dashboard</a>
                    <a href="/admin/analytics">View Analytics</a>

                <% } %>
                <a href="/quiz/start">Take Quiz</a>
                <a href="/users/profile"><span class="material-symbols-outlined">
                    account_circle
                    </span></a>
                <a href="/users/logout">Logout</a>
                <a href="/basket">Basket</a>
                <a href="/generate/user-shoes">Generate Your Shoe</a>
            <% } else { %>
                <a href="/users/login">Login</a>
                <a href="/users/register">Register</a>
                <a href="/basket">Basket</a>
                <a href="/generate/user-shoes">Generate Your Shoe</a>
            <% } %>
        </nav>
       
    <button id="translateButton" class="translate-button">Translate Page</button>
    
   
    <div id="google_translate_element"></div>
    </header>
    <main>
    <div class="carousel">
        <div class="container-carousel">
            <div class="shoe-selector" id="shoeSelector">
                <!-- Thumbnails for shoes, dynamically updated -->
            </div>
            <div class="shoe-display">
                <img id="main-shoe-image" src="" alt="Selected Shoe">
            </div>
            <div class="shoe-info">
                <h1 id="shoe-name"></h1>
                <p id="shoe-description"></p>
                <p id="shoe-price"></p>
                <button class="btn-cs" onclick="rotateNext()">Next Shoe</button>
            </div>
        </div>
        <img src="">
        <script src="script.js"></script>
    </div>
    <script src="js/carousel.js">
    </script>
    </main>
    <main>
        <!-- Product Section -->
        <section class="products-section">
            <h1>Products</h1>
            <div class="filter-bar">
                <input type="text" id="searchInput" placeholder="Search by model name...">
                
                <select id="genderFilter">
                    <option value="">All Genders</option>
                    <option value="Men">Men</option>
                    <option value="Women">Women</option>
                    <option value="Unisex">Unisex</option>
                </select>
    
                <select id="typeFilter">
                    <option value="">All Types</option>
                    <option value="sneakers">Sneakers</option>
                    <option value="formal">Formal</option>
                    <option value="boots">Boots</option>
                </select>
    
                <select id="sizeFilter">
                    <option value="">All Sizes</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                </select>
    
                <select id="companyFilter">
                    <option value="">All Companies</option>
                    <option value="nike">Nike</option>
                    <option value="adidas">Adidas</option>
                    <option value="puma">Puma</option>
                </select>
    
                <input type="number" id="minPrice" placeholder="Min Price">
                <input type="number" id="maxPrice" placeholder="Max Price">
                <button id="filterButton" class="btn btn-primary">Apply Filters</button>
            </div>
    
            <div class="products-container">
                <% products.forEach(product => { %>
                    <div class="product-card"
                        data-type="<%= product.type %>"
                        data-size="<%= product.sizes.join(',') %>"
                        data-company="<%= product.company %>"
                        data-category="<%= product.category %>"
                        data-price="<%= product.price %>">
                        
                        <img src="<%= product.imageUrl %>" alt="<%= product.name %>" class="product-image">
                        
                        <div class="product-info">
                            <h2><%= product.name %></h2>
                            <p><strong>Category:</strong> <%= product.category %></p>
                        </div>
                        
                        <div class="price-and-basket">
                            <span class="price">Price: $<%= product.price.toFixed(2) %></span>
                            <form action="/basket/add" method="post" class="basket-form">
                                <input type="hidden" name="productId" value="<%= product._id %>">
                                <input type="number" name="quantity" value="1" min="1" class="quantity-input">
                                <a href="/home/product/<%= product._id %>" class="btn btn-primary">View Details</a>
                                <button type="submit" class="btn btn-primary">Add to Basket</button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            </div>
        </section>
    </main>
    <script>document.getElementById('translateButton').addEventListener('click', function() {
        const translateElement = document.getElementById("google_translate_element");
        if (translateElement.style.display === "none") {
            translateElement.style.display = "block";  // Show the translate widget
            googleTranslateElementInit();  // Initialize Google Translate
        } else {
            translateElement.style.display = "none";  // Hide the translate widget
        }
    });

    // Initialize Google Translate Element
    function googleTranslateElementInit() {
        new google.translate.TranslateElement({
            pageLanguage: 'en',  // Default language of the page
            includedLanguages: 'en,es,fr,de,it,pt,ru', // Languages you want to support
            layout: google.translate.TranslateElement.InlineLayout.SIMPLE
        }, 'google_translate_element');
    }</script>

</body>
<footer>
    <footer class="footer">
        <div class="footer-container">
            <p>© <%= new Date().getFullYear() %> All Rights Reserved.</p>
            <div class="social-icons">
                <a href="https://www.facebook.com" target="_blank" class="social-icon"><i class="fab fa-facebook-f"></i></a>
                <a href="https://www.twitter.com" target="_blank" class="social-icon"><i class="fab fa-twitter"></i></a>
                <a href="https://www.instagram.com" target="_blank" class="social-icon"><i class="fab fa-instagram"></i></a>
                <a href="https://www.linkedin.com" target="_blank" class="social-icon"><i class="fab fa-linkedin-in"></i></a>
            </div>
        </div>
    </footer>
    
    <p>Asset Kazhybek, Medeu Zharysuly, Akhmed Pasha</p>
    <p>© <%= new Date().getFullYear() %> All Rights Reserved.</p>
</footer>
</html>
